{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "writer",
	"version": "0.1.0",
	"identifier": "com.writer.dev",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:3001",
		"beforeDevCommand": "vite --port=3001",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Writer",
				"width": 1200,
				"height": 800,
				"minWidth": 400,
				"minHeight": 400,
				"resizable": true,
				"fullscreen": false,
				"center": true,
				"decorations": true,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"transparent": false,
				"shadow": true,
				"trafficLightPosition": {
					"x": 20,
					"y": 22
				}
			}
		],
		"security": {
			"csp": null
		},
		"macOSPrivateApi": true
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"minimumSystemVersion": "10.15"
		}
	}
}
